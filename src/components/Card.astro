---
import type { CardProps } from "src/lib/types";

const { href, title, body } = Astro.props as CardProps;
---

<li>
	<a href={href} target="_blank" rel="noopener noreferrer"
		class="inline-block w-full h-full group p-4 outline outline-1 outline-[#2a233e] rounded hover:outline-[#4f39fa] focus:outline-[#4f39fa]">
		<h2 class="text-base font-bold">
			{title}<span
				class="inline-block ml-1.5 duration-300 ease-in-out group-hover:translate-x-2 group-focus:translate-x-2">&rarr;</span>
		</h2>
		<p class="mt-2 text-sm">
			{body}
		</p>
	</a>
</li>